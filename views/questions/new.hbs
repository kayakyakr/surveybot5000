<h1>New Question</h1>
<form class="form form-horizontal" action="/questions" method="POST">
  <div class="form-group">
    <label for="question_value" class="col-xs-4 col-sm-2 control-label">Question</label>
    <div class="col-xs-8 col-sm-10">
      <input id="question_value" type="text" name="question[value]" class="form-control">
    </div>
  </div>

  <div class="survey-answers">
    <div class="form-group">
      <label class="col-xs-4 col-sm-2 control-label">Response 1</label>
      <div class="col-xs-8 col-sm-10">
        <input id="answer_value" type="text" name="question[choices][0][value]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-4 col-sm-2 control-label">Response 2</label>
      <div class="col-xs-8 col-sm-10">
        <input id="answer_value" type="text" name="question[choices][1][value]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-4 col-sm-2 control-label">Response 3</label>
      <div class="col-xs-8 col-sm-10">
        <input id="answer_value" type="text" name="question[choices][2][value]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-4 col-sm-2 control-label">Response 4</label>
      <div class="col-xs-8 col-sm-10">
        <input id="answer_value" type="text" name="question[choices][3][value]" class="form-control">
      </div>
    </div>
  </div>
  <div class="clearfix">
    <div class="pull-right btn btn-default">Add Another Response</div>
  </div>
  <br/>
  <div class="clearfix">
    <a href="/questions" class="btn btn-warning">Cancel</a>
    <input id="submit" type="submit" class="btn btn-primary pull-right" value="Save">
  </div>
</form>
